<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.uns.todolist.FXMLController"
      spacing="10" alignment="TOP_CENTER">

    <!-- Title -->
    <Label text="To-Do List" id="title"/>

    <!-- Scrollable Container for Tasks -->
    <ScrollPane fx:id="taskScrollPane" id="taskScrollPane">
        <VBox fx:id="taskContainer" id="taskContainer"/>
    </ScrollPane>


    <HBox spacing="10" alignment="CENTER" id="addTaskForm">
        <TextField fx:id="taskNameField" promptText="Add Todo" HBox.hgrow="ALWAYS"/>
        <Button text="Add" fx:id="addTaskButton" onAction="#handleAddTask"/>
    </HBox>

</VBox>
